@*@model List<System.ComponentModel.DataAnnotations.ValidationResult>*@ @model CustomerApp.ViewModels.CustomerViewModel<form action="/Customer/Add" method="post">    @* customer/add means call add method in customercontroller *@    Name :-<input type="text" name="txtcustomerName" value="@Model.customer.customerName" /><br /> <!--input name customerName and address must be same as variable name in class-->    Address :-<input type="text" name="txtaddress" value="@Model.customer.address" /><br /> <!--the @@model.customer.customername etc is just to remember the previous values-->    <input type="submit" value="Add" /></form>@if (Model != null){    @foreach (var error in Model.errors) //this Model is the variable    {        @error.ErrorMessage <br />    }}