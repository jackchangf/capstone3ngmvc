@*creates strongly typed view, namespace from customer.cs, get the class customer and make a list because below code expects a list*@
@model List<CustomerApp.Models.Customer>

<form action="/Customer/Search" method="get">
    @* customer/search means call search method in customercontroller when click submit button *@
    name: <input type="text" name="customerName" value="" />
    <input type="submit" value="Search" />

</form>


<table>
    <tr>
        <td>Name</td>
        <td>Address</td>
    </tr>
    @if (Model != null) //need this because nullrefexception when using search button, model not referenced yet
    {
        @foreach (var cust in Model) //model is a ready made variable
        {
            <tr>
                <td>@cust.customerName</td>
                <td>@cust.address</td>
                <td>@Html.ActionLink("DeleteRecord", "Delete", "Customer", new { id = cust.id })</td>
                <td>@Html.ActionLink("UpdateRecord", "Update", "Customer", new { id = cust.id })</td>
            </tr>

        }
    }


</table>

